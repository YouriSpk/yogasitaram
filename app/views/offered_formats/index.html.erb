<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <p class="text-success"><%= notice %></p>

      <h1 class="text-center mb-4">Offered formats</h1>

      <div id="offered_formats">
        <% @offered_formats.each do |offered_format| %>
          <%= render offered_format %>
          <p class="text-center">
            <%= link_to "Show this offered format", offered_format, class: 'btn btn-info btn-sm' %>
          </p>
        <% end %>
      </div>

      <div class="text-center mt-4">
        <%= link_to "New offered format", new_offered_format_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
