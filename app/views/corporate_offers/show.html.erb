<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <p class="text-success"><%= notice %></p>

      <%= render @corporate_offer %>

      <div class="text-center mt-4">
        <%= link_to "Edit this corporate offer", edit_corporate_offer_path(@corporate_offer), class: 'btn btn-secondary mr-2' %>
        <%= link_to "Back to corporate offers", corporate_offers_path, class: 'btn btn-primary' %>

        <%= button_to "Destroy this corporate offer", @corporate_offer, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger ml-2' %>
      </div>
    </div>
  </div>
</div>
