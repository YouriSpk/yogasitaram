<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <p class="text-success"><%= notice %></p>
      <h1>Yoga styles</h1>

      <div id="yoga_styles">
        <% @yoga_styles.each do |yoga_style| %>
          <div class="card mb-3">
            <div class="card-body">
              <%= render yoga_style %>
              <div class="text-right">
                <%= link_to "Details", yoga_style, class: 'btn btn-info btn-sm' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="text-center">
        <% if user_signed_in? %>
          <%= link_to "Add + 1", new_yoga_style_path, class: 'btn btn-success' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
